<div class='card loan-card'>
  <div class='card-body'>
    <h5 class='card-title'>Budget Page PLACEHOLDER</h5>
    <table>
      <tr>
        <th class='col-md-2'>Payee</th>
        <th class='col-md-1'>Date</th>
        <th class='col-md-1'>Amount</th>
        <th class='col-md-1'>Category</th>
        <th class='col-md-1'>Type</th>
        <th class='col-md-1'>Recurring?</th>
        <th class='col-md-1'>Next Bill Date</th>
        <th class='col-md-3'>Notes</th>
      </tr>
      {{#each transactions as |transaction|}}
      
        <tr>
          <td class='col-md-2'>{{transaction.tran_name}}</td>
          <td class='col-md-1'>{{transaction.tran_date}}</td>
          <td class='col-md-1'>${{transaction.amount}}</td>
          <td class='col-md-1'>{{transaction.category}}</td>
          <td class='col-md-1'>{{#if transaction.is_expense}}Expense{{else}}Income{{/if}}</td>
          <td class='col-md-1'>{{#if transaction.is_recurring}}Yes{{else}}No{{/if}}</td>
          <td class='col-md-1'>{{transaction.recur_date}}</td>
          <td class='col-md-3'>{{transaction.notes}}</td>
        </tr>
      {{/each}}

    </table>
  </div>
</div>