<!-- Sidebar -->
<nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-white">
  {{>nav_bar}}
</nav>

<!-- Card Row 1 -->
<main class="main flex flex-row">
  <div>
    <h1 id="overview">Overview For {{user.name}}</h1>
  </div>
  <div class="row row-cols-1 row-cols-md-4 g-4">

    <div class="col-3">
      <!--Monthly budget partial-->
      {{>monthly_budget_card}}
    </div>

    <div class="col-3">
      <!--Donut Graph-->
      {{>expenses_graph_card}}
    </div>
    
    <div class="col-5">
      <!--Line Graph-->
      {{>spending_lineGraph_card}}
    </div>
  </div>
  <!-- Card Row 2 -->
  <div class="row row-cols-1 row-cols-md-4 g-4">

    <div class="col-2">
      {{>saving_goal_card}}
    </div>

    <div class="col-9">
      <!--Insert Location for Transaction List-->
      {{>trx_card}}
    </div>

  <!-- Modals -->
  <div class="modal fade custom-modal" id="project-modal" tabindex="-1" role="dialog"
    aria-labelledby="project-modal-form" aria-hidden="true">
    {{>modals}}
  </div>