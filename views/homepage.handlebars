  <!-- Modal For Budget -->
  <div class="modal fade custom-modal" id="project-modal" tabindex="-1" role="dialog"
    aria-labelledby="project-modal-form" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="project-modal-form">Edit Budget</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form id="project-form">
          <div class="modal-body">
            <div class="form-group">
              <label for="total_income">Monthly Budget</label>
              <input type="text" id="total_income" class="form-control" value="{{ budget.total_income }}"
                required />
            </div>
    
            <div class="form-group">
              <label for="total_remain">Remaining Balance($)</label>
              <input type="number" id="total_remain" class="form-control" value="{{ budget.total_remain }}" required />
            </div>

    
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn custom-btn">Submit Budget Info</button>
          </div>
        </form>
      </div>
    </div>
  </div>
    <!-- Modal For Add Income and Expense -->
  <div class="modal fade custom-modal" id="income-expense-modal" tabindex="-1" role="dialog"
    aria-labelledby="income-expense-form" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="income-expense-form">Add Income or Expense</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form id="project-form">
          <div class="modal-body">
            {{!-- Transaction Name Input --}}
            <div class="form-group">
              <label for="trx_name">Name of Transaction (or Income)?</label>
              <input type="text" id="trx_name" class="form-control" value="{{ transaction.tran_name }}" placeholder="ex: New Tires"/>
            </div>
            {{!-- Tran Date Input --}}
            <div class="form-group">
              <label for="trx_date">Date of transaction?</label>
              <input type="date" id="trx_date" class="form-control" value="{{ transaction.tran_date }}" placeholder="YYYY-MM-DD"/>
            </div>
            {{!-- Category Input --}}
            <div class="form-group">
              <label for="trx_category">Category Name</label>
              <input type="text" id="trx_category" class="form-control" value="{{ transaction.category }}" placeholder="ex: Automobile Upkeep"/>
            </div>
            {{!-- Income or Expense Input --}}
            <div class="form-group">
              <label for="is_exp">Is this an expense?</label>
              <input type="text" id="is_exp" class="form-control" value="{{ transaction.is_expense }}" placeholder="Y/N"/>
            </div>
            {{!-- Recurring Input --}}
            <div class="form-group">
              <label for="recurring">Is this recurring?</label>
              <input type="text" id="recurring" class="form-control" value="{{ transaction.is_recurring }}" placeholder="Y/N"/>
            </div>
            {{!-- Recurring Date Input --}}
            <div class="form-group">
              <label for="recurring-date">When does it recur (if applicable)?</label>
              <input type="text" id="recurring-date" class="form-control" value="{{ transaction.recur_date }}" placeholder="ex: The first of the month"/>
            </div>
            {{!-- Notes Input --}}
            <div class="form-group">
              <label for="notes">Notes:</label>
              <input type="text" id="notes" class="form-control" value="{{ transaction.notes }}" placeholder="ex: Remember to cancel after the first year"/>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn custom-btn">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>

