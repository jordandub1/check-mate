  </div>

    <div class="col-2.5">
      <div class="card tbd-card">
        <div class="card-body">
          <h5 class="card-title">Go Duke!</h5>
          <p class="card-text">[Insert Duke Fanpage]</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal For Budget -->
  <div class="modal fade custom-modal" id="project-modal" tabindex="-1" role="dialog"
    aria-labelledby="project-modal-form" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="project-modal-form">Edit Budget</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form id="project-form">
          <div class="modal-body">
            <div class="form-group">
              <label for="total_income">Monthly Budget</label>
              <input type="text" id="total_income" class="form-control" value="{{ budget.total_income }}"
                required />
            </div>
    
            <div class="form-group">
              <label for="total_remain">Remaining Balance($)</label>
              <input type="number" id="total_remain" class="form-control" value="{{ budget.total_remain }}" required />
            </div>

    
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn custom-btn">Submit Budget Info</button>
          </div>
        </form>
      </div>
    </div>
  </div>
    <!-- Modal For Add Income and Expense -->
  <div class="modal fade custom-modal" id="income-expense-modal" tabindex="-1" role="dialog"
    aria-labelledby="income-expense-form" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="income-expense-form">Add Income or Expense</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form id="project-form">
          <div class="modal-body">
            <div class="form-group">
              <label for="add_income">Add Income</label>
              <input type="text" id="add_income" class="form-control" value="{{ budget.add_income }}" placeholder="$0.00"/>
            </div>
    
            <div class="form-group">
              <label for="add_expense">Add Expense</label>
              <input type="text" id="add_expense" class="form-control" value="{{ budget.add_expense }}" placeholder="$0.00"/>
            </div>

    
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn custom-btn">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>

